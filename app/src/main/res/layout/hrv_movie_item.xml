<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="145dp"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/iv_horizontal_movie_image"
            android:src="@drawable/example_of_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_horizontal_movie_title"
        android:text="Venom"
        android:textSize="17sp"
        android:layout_below="@id/card_view"
        android:layout_width="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ic_realised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@id/tv_horizontal_movie_title"
            android:src="@drawable/ic_watch"/>

    <TextView
        android:id="@+id/tv_horizontal_realised_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tv_horizontal_movie_title"
        android:layout_toRightOf="@+id/ic_realised"
        android:text="2020-02-29"/>



</RelativeLayout>
