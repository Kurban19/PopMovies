<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_hideable="true"
    app:behavior_peekHeight="200dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <ImageView
            android:id="@+id/iv_movie_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/example_of_movie"
            android:scaleType="centerCrop"
            android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/tv_movie_title_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_movie_image"
        android:layout_marginLeft="8dp"
        android:text="Scary Movie"
        android:textSize="30sp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_movie_date_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_movie_title_description"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@id/iv_movie_image"
        android:textSize="20sp"
        android:text="2018-09-21" />


    <TextView
        android:id="@+id/tv_movie_rating_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6.8"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="90dp"
        android:textStyle="bold"
        android:textSize="56sp"/>

    <View
        android:id="@+id/v_delimeter"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/iv_movie_image"
        android:background="#3e3e3e"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_movie_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Two couples on an oceanside getaway grow suspicious that the host of their seemingly perfect rental house may be spying on them. Before long, what should have been a celebratory weekend trip turns into something far more sinister."
        android:layout_marginEnd="16dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/v_delimeter"
        android:textSize="20sp"/>


</RelativeLayout>